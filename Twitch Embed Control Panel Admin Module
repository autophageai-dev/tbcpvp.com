<script>
(function() {
  const API = 'https://tbcpvp-api.kargozgaming.workers.dev';
  const KEY = '{{ section.settings.admin_key }}';
  const ICONS = {
    warrior: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/war.png?v=1766427831',
    paladin: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/pala.png?v=1766427831',
    hunter: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/hunter.png?v=1766427832',
    rogue: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/rogue.png?v=1766427831',
    priest: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/priest.png?v=1766427831',
    shaman: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/shaman.png?v=1766427831',
    mage: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/mage.png?v=1766427831',
    warlock: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/warlock.png?v=1766427831',
    druid: 'https://cdn.shopify.com/s/files/1/0964/2609/8968/files/druid.png?v=1766427831'
  };
  
  const list = document.getElementById('streamer-list');
  const status = document.getElementById('admin-status');
  
  function showStatus(msg, err) {
    status.textContent = msg;
    status.className = 'admin-status ' + (err ? 'error' : 'success');
    setTimeout(() => status.className = 'admin-status', 3000);
  }
  
  async function load() {
    const res = await fetch(API + '/streams/approved');
    const data = await res.json();
    if (!data.streamers?.length) {
      list.innerHTML = '<p style="color:rgba(255,255,255,0.5)">No streamers yet</p>';
      return;
    }
    list.innerHTML = data.streamers.map(s => `
      <div class="streamer-item ${s.is_pinned ? 'pinned' : ''}">
        <div class="streamer-info">
          ${s.main_class ? `<img src="${ICONS[s.main_class]}" class="streamer-class-icon" alt="${s.main_class}">` : ''}
          <div>
            <div>
              ${s.display_name}
              ${s.is_pinned ? '<span class="pinned-badge">ðŸ“Œ FEATURED</span>' : ''}
            </div>
            <div class="username">twitch.tv/${s.twitch_username}</div>
          </div>
        </div>
        <div class="streamer-actions">
          <button class="pin-btn ${s.is_pinned ? 'active' : ''}" data-id="${s.id}" data-pinned="${s.is_pinned ? '1' : '0'}">
            ðŸ“Œ ${s.is_pinned ? 'Pinned' : 'Pin'}
          </button>
          <select data-id="${s.id}" class="class-select">
            <option value="">No Class</option>
            <option value="warrior" ${s.main_class === 'warrior' ? 'selected' : ''}>Warrior</option>
            <option value="paladin" ${s.main_class === 'paladin' ? 'selected' : ''}>Paladin</option>
            <option value="hunter" ${s.main_class === 'hunter' ? 'selected' : ''}>Hunter</option>
            <option value="rogue" ${s.main_class === 'rogue' ? 'selected' : ''}>Rogue</option>
            <option value="priest" ${s.main_class === 'priest' ? 'selected' : ''}>Priest</option>
            <option value="shaman" ${s.main_class === 'shaman' ? 'selected' : ''}>Shaman</option>
            <option value="mage" ${s.main_class === 'mage' ? 'selected' : ''}>Mage</option>
            <option value="warlock" ${s.main_class === 'warlock' ? 'selected' : ''}>Warlock</option>
            <option value="druid" ${s.main_class === 'druid' ? 'selected' : ''}>Druid</option>
          </select>
          <button class="remove-btn" data-id="${s.id}">Remove</button>
        </div>
      </div>
    `).join('');
    
    list.querySelectorAll('.remove-btn').forEach(b => {
      b.onclick = () => remove(b.dataset.id);
    });
    
    list.querySelectorAll('.class-select').forEach(sel => {
      sel.onchange = () => updateClass(sel.dataset.id, sel.value);
    });
    
    list.querySelectorAll('.pin-btn').forEach(btn => {
      btn.onclick = () => togglePin(btn.dataset.id, btn.dataset.pinned === '1');
    });
  }
  
  async function add() {
    const u = document.getElementById('new-streamer-username').value.trim().toLowerCase();
    const d = document.getElementById('new-streamer-display').value.trim() || u;
    const c = document.getElementById('new-streamer-class').value;
    if (!u) return showStatus('Enter username', true);
    
    const res = await fetch(API + '/streams/approved?admin_key=' + KEY, {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({twitch_username: u, display_name: d, main_class: c || null})
    });
    if (res.ok) {
      showStatus('Added!', false);
      document.getElementById('new-streamer-username').value = '';
      document.getElementById('new-streamer-display').value = '';
      document.getElementById('new-streamer-class').value = '';
      load();
    } else {
      showStatus('Failed to add', true);
    }
  }
  
  async function updateClass(id, mainClass) {
    const res = await fetch(API + '/streams/approved/' + id + '?admin_key=' + KEY, {
      method: 'PUT',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({main_class: mainClass || null})
    });
    if (res.ok) {
      showStatus('Class updated!', false);
      load();
    } else {
      showStatus('Failed to update', true);
    }
  }
  
  async function togglePin(id, currentlyPinned) {
    const res = await fetch(API + '/streams/approved/' + id + '?admin_key=' + KEY, {
      method: 'PUT',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify({is_pinned: !currentlyPinned})
    });
    if (res.ok) {
      showStatus(currentlyPinned ? 'Unpinned!' : 'Pinned as featured!', false);
      load();
    } else {
      showStatus('Failed to update', true);
    }
  }
  
  async function remove(id) {
    if (!confirm('Remove?')) return;
    const res = await fetch(API + '/streams/approved/' + id + '?admin_key=' + KEY, {method: 'DELETE'});
    if (res.ok) { showStatus('Removed!', false); load(); }
    else showStatus('Failed', true);
  }
  
  document.getElementById('add-streamer-btn').onclick = add;
  load();
})();
</script>

