  <h2>Manage Approved Streamers</h2>
  
  <div class="add-streamer-form">
    <input type="text" id="new-streamer-username" placeholder="Twitch username">
    <input type="text" id="new-streamer-display" placeholder="Display name">
    <select id="new-streamer-class">
      <option value="">Select Class</option>
      <option value="warrior">Warrior</option>
      <option value="paladin">Paladin</option>
      <option value="hunter">Hunter</option>
      <option value="rogue">Rogue</option>
      <option value="priest">Priest</option>
      <option value="shaman">Shaman</option>
      <option value="mage">Mage</option>
      <option value="warlock">Warlock</option>
      <option value="druid">Druid</option>
    </select>
    <button id="add-streamer-btn">Add Streamer</button>
  </div>
  
  <div id="streamer-list" class="streamer-list">Loading...</div>
  <div id="admin-status" class="admin-status"></div>
</div>

