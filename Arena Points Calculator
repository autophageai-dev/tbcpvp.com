<script>
(function() {
  'use strict';

  var selectedBracket = null;

  var GEAR_DATA = {
    '5pc Set': { oldCost: 8250, newCost: 6825 },
    'Two-Hand Weapon': { oldCost: 3750, newCost: 3110 },
    'Bow/Gun': { oldCost: 3750, newCost: 3110 },
    'MH + OH (Caster)': { oldCost: 4275, newCost: 3540 },
    'MH + OH (Melee)': { oldCost: 3750, newCost: 3105 },
    'Shield': { oldCost: 1875, newCost: 1550 },
    'Chest': { oldCost: 1875, newCost: 1550 },
    'Head': { oldCost: 1875, newCost: 1550 },
    'Legs': { oldCost: 1875, newCost: 1550 },
    'Shoulders': { oldCost: 1500, newCost: 1245 },
    'Gloves': { oldCost: 1125, newCost: 930 }
  };

  // OLD TBC: Different multipliers on same base formula
  var OLD_BRACKET_MULT = { '2v2': 0.76, '3v3': 0.88, '5v5': 1.0 };
  var OLD_ASYMPTOTE = 1511.26;

  // NEW TBC ANNIVERSARY: Different asymptotes per bracket (no multipliers)
  var NEW_ASYMPTOTE = { '2v2': 1664, '3v3': 2234, '5v5': 2234 };

  function calcOld(rating, bracket) {
    var pts;
    if (rating >= 1500) {
      pts = OLD_ASYMPTOTE / (1 + 1639.28 * Math.exp(-0.00412 * rating));
    } else {
      pts = 0.22 * rating + 14;
    }
    return Math.floor(Math.max(0, Math.min(pts * OLD_BRACKET_MULT[bracket], 5000)));
  }

  function calcNew(rating, bracket) {
    var asymptote = NEW_ASYMPTOTE[bracket];
    var pts;
    if (rating >= 1500) {
      pts = asymptote / (1 + 1639.28 * Math.exp(-0.00412 * rating));
    } else {
      // Low rating formula scales proportionally
      var lowBase = (bracket === '2v2') ? 0.24 : 0.32;
      var lowAdd = (bracket === '2v2') ? 15 : 20;
      pts = lowBase * rating + lowAdd;
    }
    return Math.floor(Math.max(0, Math.min(pts, 5000)));
  }

  document.querySelectorAll('.tab-btn').forEach(function(btn) {
    btn.onclick = function() {
      var tab = this.getAttribute('data-tab');
      document.querySelectorAll('.tab-btn').forEach(function(b) { b.classList.remove('active'); });
      this.classList.add('active');
      document.querySelectorAll('.tab-content').forEach(function(c) { c.classList.remove('active'); });
      document.getElementById(tab + '-tab').classList.add('active');
    };
  });

  document.querySelectorAll('.bracket-btn').forEach(function(btn) {
    btn.onclick = function() {
      document.querySelectorAll('.bracket-btn').forEach(function(b) { b.classList.remove('selected'); });
      this.classList.add('selected');
      selectedBracket = this.getAttribute('data-bracket');
    };
  });

  window.calculatePoints = function() {
    if (!selectedBracket) { alert('Please select a bracket first!'); return; }
    var rating = parseInt(document.getElementById('rating').value) || 0;
    var current = parseInt(document.getElementById('currentPoints').value) || 0;
    if (rating < 0 || rating > 3000) { alert('Rating must be between 0 and 3000'); return; }
    var pts = calcNew(rating, selectedBracket);
    document.getElementById('pointsPerWeek').textContent = pts;
    document.getElementById('pointsAfterReset').textContent = current + pts;
    document.getElementById('results').classList.add('show');
  };

  window.calculateWeeksToGear = function() {
    var rating = parseInt(document.getElementById('weeksRating').value) || 0;
    var bracket = document.getElementById('weeksBracket').value;
    if (rating < 0 || rating > 3000) { alert('Rating must be between 0 and 3000'); return; }

    var oldPts = calcOld(rating, bracket);
    var newPts = calcNew(rating, bracket);

    document.getElementById('oldPointsDisplay').textContent = oldPts.toLocaleString();
    document.getElementById('newPointsDisplay').textContent = newPts.toLocaleString();
    document.getElementById('pointsGainDisplay').textContent = (newPts - oldPts).toLocaleString();

    var oldWks = (GEAR_DATA['5pc Set'].oldCost / oldPts).toFixed(1);
    var newWks = (GEAR_DATA['5pc Set'].newCost / newPts).toFixed(1);
    var saved = (oldWks - newWks).toFixed(1);
    var pct = (((oldWks - newWks) / oldWks) * 100).toFixed(1);

    document.getElementById('oldSetWeeks').textContent = oldWks;
    document.getElementById('newSetWeeks').textContent = newWks;
    document.getElementById('timeSavedValue').textContent = saved + ' Weeks';
    document.getElementById('timeSavedPercent').textContent = 'You gear ' + pct + '% faster!';

    var tbody = document.getElementById('gearBreakdownBody');
    tbody.innerHTML = '';
    for (var item in GEAR_DATA) {
      var c = GEAR_DATA[item];
      var ow = (c.oldCost / oldPts).toFixed(1);
      var nw = (c.newCost / newPts).toFixed(1);
      var sv = (ow - nw).toFixed(1);
      tbody.innerHTML += '<tr><td>' + item + '</td><td class="new-price">' + c.newCost.toLocaleString() + '</td><td class="old-weeks">' + ow + ' wks</td><td class="new-weeks">' + nw + ' wks</td><td class="saved-weeks">-' + sv + ' wks</td></tr>';
    }

    document.getElementById('weeksResults').classList.add('show');
  };
})();
</script>
